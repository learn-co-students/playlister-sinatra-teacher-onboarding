<h1>Edit Song</h1>
<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label>Name</label>
  <input type="text" name="song[name]" id="Name" value="<%= @song.name %>">

  <h3>Genres</h3>
  <% Genre.all.each do |genre| %>
    <%= genre.name %><input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
    <br>
  <% end %>
  <br>
  <label>Artist</label>
  <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>">
  <br>
  
  <input type="submit" value="Save">
</form>
